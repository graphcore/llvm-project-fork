# RUN: llc -march=colossus -run-pass=colossus-counted-loop-mir -x=mir -o - < %s | FileCheck %s

# CHECK:    RPT_ZI 2000, 1, 1 {

---
name:            test
body:             |
  bb.0:  
    $m1 = SETZI 2000, 0
    $m1 = CLOOP_BEGIN_VALUE killed $m1, 1
    $m2 = ADD_ZI killed $m0, 7996, 0
    $m0 = OR_ZI $mzero, 0, 0
    CLOOP_BEGIN_TERMINATOR $m1, 1
  
  bb.1:
    successors: %bb.1, %bb.2
  
    $m2, $m3 = LD32STEP_SI $mzero, killed $m2, -1, 0 :: (load 4)
    $m0 = ADD killed $m3, killed $m0, 0
    $m1 = CLOOP_END_VALUE killed $m1, 1
    CLOOP_END_BRANCH $m1, %bb.1, 1
  
  bb.2:  
    RTN $lr, 0

...
